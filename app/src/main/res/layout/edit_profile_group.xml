<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="48DDDCDC">

    <LinearLayout
        android:id="@+id/EditProfileGroupHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_smart_login_code"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageButton
            android:id="@+id/ibBackEditGroupHeader"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_radius_background_blue"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/ImgEditProfileGroup"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_account_circle_black"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên nhóm"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/roboto"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi tên hoặc ảnh"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:textColor="@color/com_smart_login_code"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tùy chỉnh"
            android:textStyle="bold"
            android:textColor="#AFAFAF"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_radius_textview"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_circle_notifications_24"/>

                <TextView
                    android:id="@+id/tvEditProfileGroupNotice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông báo"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C3C3C3"
                android:layout_marginLeft="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_groups_24"/>

                <TextView
                    android:id="@+id/tvEditProfileGroupSeeMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xem thành viên"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C3C3C3"
                android:layout_marginLeft="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_person_add_24"/>

                <TextView
                    android:id="@+id/tvEditProfileGroupAddMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thêm thành viên"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hành động khác"
            android:textStyle="bold"
            android:textColor="#AFAFAF"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/color_radius_textview"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_warning_24"/>

                <TextView
                    android:id="@+id/tvEditProfileGroupReport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Báo cáo"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C3C3C3"
                android:layout_marginLeft="50dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_logout_24"/>

                <TextView
                    android:id="@+id/tvEditProfileGroupOutGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rời khỏi nhóm"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>