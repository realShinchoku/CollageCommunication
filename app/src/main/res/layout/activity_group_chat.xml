<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_smart_login_code">

        <ImageView
            android:id="@+id/imgMessagesInfoUser"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_back_light_10"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_account_circle_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto"
            android:text="Tin nhắn"
            android:textColor="#ffff"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgMessagesMoreChoice"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_back_light_10"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_more_horiz_24"/>

    </RelativeLayout>


    <androidx.appcompat.widget.SearchView
        android:id="@+id/messagesSearchInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_smart_login_code"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtNewChat"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Nhóm chát mới"
            android:textColor="#fff"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/imgNewChatClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@drawable/ic_baseline_close_24"/>

        <EditText
            android:id="@+id/txtNewChatSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNewChat"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:drawableLeft="@drawable/ic_baseline_search_24"
            android:padding="5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRecyclerViewListChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNewChatSearch"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#fff" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNewChatCreate"
            android:layout_below="@+id/messagesRecyclerViewListChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="Tạo nhóm"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesRecyclerViewListChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="50dp"
            android:padding="6dp"
            android:src="@drawable/ic_baseline_add_circle_24" />
    </RelativeLayout>


</LinearLayout>